model Supplier {
  isSystem      Boolean         @default(false)
  id            Int             @id @default(autoincrement())
  name          String
  contactPerson String?
  phone         String?
  email         String?
  taxId         String?
  taxBranchCode String?         @default("00000")
  address       String?
  province      String?
  postalCode    String?
  country       String?         @default("Thailand")
  paymentTerms  Int?            @default(0)
