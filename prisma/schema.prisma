  APPROVED
  REJECTED
}

enum LoginType {
  PHONE
  EMAIL
  SOCIAL
  ADMIN
}

enum RefundMethod {
  CASH
  TRANSFER
  CARD
  STORE_CREDIT
  OTHER
}

enum SaleType {
