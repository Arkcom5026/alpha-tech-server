  IN_PROGRESS
  WAITING_PARTS
  COMPLETED
  CANCELLED
}

enum ReceiptStatus {
  PENDING
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  UNPAID
  PARTIALLY_PAID
  WAITING_APPROVAL
  PAID
  CANCELLED
}

enum PaymentSlipStatus {
  NONE
