

generator client {
  provider = "prisma-client-js"
  // Explicit output to be Prisma 7–ready (relative to prisma/schema.prisma)
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

