model Bank {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  supplier  Supplier[]
  active    Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model PurchaseOrder {
  id     Int                 @id @default(autoincrement())
  code   String              @unique
  date   DateTime            @default(now())
  note   String?
  status PurchaseOrderStatus @default(PENDING)

  supplier   Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  supplierId Int

  branch   Branch @relation(fields: [branchId], references: [id], onDelete: Cascade)
  branchId Int

  employee   EmployeeProfile @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  employeeId Int

  items    PurchaseOrderItem[]
  receipts PurchaseOrderReceipt[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PurchaseOrderItem {
  id Int @id @default(autoincrement())

  productId        Int
  quantity         Int
  receivedQuantity Int                        @default(0)
  costPrice        Decimal                    @db.Decimal(12, 2)
  receipts         PurchaseOrderReceiptItem[]

  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  purchaseOrderId Int

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PurchaseOrderReceipt {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  receivedAt  DateTime @default(now())
  note        String?
  totalAmount Decimal? @db.Decimal(12, 2)
  paidAmount  Decimal? @db.Decimal(12, 2)

  supplierTaxInvoiceNumber String?
  supplierTaxInvoiceDate   DateTime?
  vatRate                  Decimal?  @default(7) @db.Decimal(5, 2)

  statusReceipt ReceiptStatus @default(PENDING)
  statusPayment PaymentStatus @default(UNPAID)

  receivedById Int
  // Link to EmployeeProfile for audit trail
  receivedBy   EmployeeProfile @relation(fields: [receivedById], references: [id], onDelete: Cascade)

  printed  Boolean @default(false)
  branch   Branch  @relation(fields: [branchId], references: [id], onDelete: Cascade)
  branchId Int

  // Optional supplier at receipt level (supports QUICK or PO-less receipts)
  supplierId Int?
  supplier   Supplier? @relation(fields: [supplierId], references: [id], onDelete: SetNull)

  purchaseOrder   PurchaseOrder? @relation(fields: [purchaseOrderId], references: [id], onDelete: SetNull)
  purchaseOrderId Int?

  source ReceiptSource @default(PO)

  items                  PurchaseOrderReceiptItem[]
  barcodeReceiptItem     BarcodeReceiptItem[]
  createdAt              DateTime                   @default(now())
  updatedAt              DateTime                   @updatedAt
  supplierPaymentReceipt SupplierPaymentReceipt[]

  // ✅ Input Tax Filing (Batch) linkage (do NOT store filed status here; use batch items)
  inputTaxFilingItems InputTaxFilingItem[]

  @@index([branchId, receivedAt])
  @@index([purchaseOrderId])
  // Improve query performance by channel/time
  @@index([source, receivedAt])
}

// =============================
// Input Tax Filing (Batch)
// =============================

enum InputTaxFilingStatus {
  DRAFT
  SUBMITTED
  VOIDED
}

model InputTaxFilingBatch {
  id       Int    @id @default(autoincrement())
  branch   Branch @relation(fields: [branchId], references: [id], onDelete: Cascade)
  branchId Int

  // Filing period (Thai VAT filing is monthly)
  month Int
  year  Int

  status InputTaxFilingStatus @default(DRAFT)
  note   String?

  // Who created this filing batch (audit)
  createdById Int
  createdBy   EmployeeProfile @relation(fields: [createdById], references: [id], onDelete: Cascade)

  items InputTaxFilingItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([branchId, year, month])
  @@index([status])
}

// =============================
// Sales Tax Filing (Batch)
// =============================

enum SalesTaxFilingStatus {
  DRAFT
  SUBMITTED
  VOIDED
}

model SalesTaxFilingBatch {
  id Int @id @default(autoincrement())

  branch   Branch @relation(fields: [branchId], references: [id], onDelete: Cascade)
  branchId Int

  // Filing period (monthly)
  month Int
  year  Int

  status SalesTaxFilingStatus @default(DRAFT)
  note   String?

  // Who created this filing batch (audit)
  createdById Int
  createdBy   EmployeeProfile @relation(fields: [createdById], references: [id], onDelete: Cascade)

  items SalesTaxFilingItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([branchId, year, month])
  @@index([status])
}

model SalesTaxFilingItem {
  id Int @id @default(autoincrement())

  batch   SalesTaxFilingBatch @relation(fields: [batchId], references: [id], onDelete: Cascade)
  batchId Int

  sale   Sale @relation(fields: [saleId], references: [id], onDelete: Cascade)
  saleId Int

  createdAt DateTime @default(now())

  // Prevent duplicates inside the same batch
  @@unique([batchId, saleId])
  // Fast lookup: check whether a sale is already included in any batch
  @@index([saleId])
}

model InputTaxFilingItem {
  id Int @id @default(autoincrement())

  batch   InputTaxFilingBatch @relation(fields: [batchId], references: [id], onDelete: Cascade)
  batchId Int

  receipt                PurchaseOrderReceipt @relation(fields: [purchaseOrderReceiptId], references: [id], onDelete: Cascade)
  purchaseOrderReceiptId Int

  createdAt DateTime @default(now())

  // Prevent duplicates inside the same batch
  @@unique([batchId, purchaseOrderReceiptId])
  // Fast lookup: check whether a receipt is already included in any batch
  @@index([purchaseOrderReceiptId])
}

model PurchaseOrderReceiptItem {
  id        Int @id @default(autoincrement())
  receiptId Int

  // Optional for QUICK receipts (no PO)
  purchaseOrderItemId Int?
  purchaseOrderItem   PurchaseOrderItem? @relation(fields: [purchaseOrderItemId], references: [id], onDelete: SetNull)

  // Direct product link for QUICK
  productId Int?
  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  // Decimal quantity to support SIMPLE mode
  quantity  Decimal @db.Decimal(12, 2)
  costPrice Decimal @db.Decimal(12, 2)

  receipt            PurchaseOrderReceipt @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  stockItems         StockItem[]
  barcodeReceiptItem BarcodeReceiptItem[]
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  simpleLots         SimpleLot[]

  @@index([receiptId])
  @@index([productId])
}

model Order {
